<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMoneda"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="#F8DFE1E1"
            android:contentDescription="imageDollar"
            android:src="@drawable/ic_baseline_attach_money_24" />

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="110dp"
            android:layout_gravity="end"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvmontoRecarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/san_francisco"
                android:text="Recarga s/15.00"
                android:textColor="#000"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvFechaMovimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvmontoRecarga"
                android:layout_marginTop="22dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/san_francisco"
                android:text="10/05/2022"
                android:textColor="#4CAF50"
                android:textSize="18dp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>